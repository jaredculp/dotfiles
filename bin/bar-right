#!/usr/bin/env bash

date=$(date +"%a %H:%M")
ssid=$(networksetup -getairportnetwork en0 | cut -c 24-)
down=$(/usr/local/bin/ifstat -n -z -i en0 -S 1 1 | awk 'FNR == 3 {print $2}')
up=$(/usr/local/bin/ifstat -n -z -i en0 -S 1 1 | awk 'FNR == 3 {print $3}')
batt=$(pmset -g batt | grep -o '[0-9]*%')


echo "↓ $down ↑ $up | $ssid | $batt | $date"
