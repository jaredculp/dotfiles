#!/usr/bin/env bash

fg=$'\e[0m'
blue=$'\e[34m'

brew_packages() {
  brews=$(brew list | wc -l)
  casks=$(brew cask list | wc -l)
  echo $((${brews} + ${casks}))
}

colors() {
  for color in {0..7}; do
    printf %s "$(tput setab $((color + 8)))  $(tput sgr0) "
  done
  printf '\n'
  for color in {0..7}; do
    printf %s "$(tput setab $color)  $(tput sgr0) "
  done
}

os=$(uname)
shell=$(basename "$SHELL")
packages=$(brew_packages)
wm="chunkwm"

cat << EOF

$(colors)

        ${blue}os${fg} ${os}
     ${blue}shell${fg} ${shell}
  ${blue}packages${fg} ${packages}
        ${blue}wm${fg} ${wm}

EOF
